{
  "name": "advanced-telegram-bot",
  "version": "2.0.0",
  "description": "Advanced Telegram Bot for DEX Trading with AI features",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "build": "npm run lint && npm run test",
    "deploy": "npm run build && pm2 start ecosystem.config.js",
    "stop": "pm2 stop advanced-telegram-bot",
    "restart": "pm2 restart advanced-telegram-bot",
    "logs": "pm2 logs advanced-telegram-bot"
  },
  "keywords": [
    "telegram",
    "bot",
    "dex",
    "trading",
    "cryptocurrency",
    "defi",
    "ai",
    "blockchain",
    "ethereum",
    "uniswap"
  ],
  "author": "DEX Bot Team",
  "license": "MIT",
  "dependencies": {
    "node-telegram-bot-api": "^0.64.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "redis": "^4.6.10",
    "mongoose": "^8.0.3",
    "axios": "^1.6.2",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "bull": "^4.12.2",
    "node-cron": "^3.0.3",
    "sharp": "^0.33.0",
    "canvas": "^2.11.2",
    "natural": "^6.7.0",
    "sentiment": "^5.0.2",
    "translate-google": "^1.5.0",
    "node-cache": "^5.1.2",
    "express-rate-limit": "^7.1.5",
    "ioredis": "^5.3.2",
    "node-cache": "^5.1.2",
    "uuid": "^9.0.1",
    "crypto": "^1.0.1",
    "fs-extra": "^11.1.1",
    "path": "^0.12.7",
    "url": "^0.11.3",
    "querystring": "^0.2.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.2",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "@types/node": "^20.10.4",
    "typescript": "^5.3.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/advanced-telegram-bot.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/advanced-telegram-bot/issues"
  },
  "homepage": "https://github.com/your-username/advanced-telegram-bot#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
